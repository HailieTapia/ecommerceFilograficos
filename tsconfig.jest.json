/* Configuración específica para Jest (manteniendo tsconfig.spec.json para Karma) */
{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "module": "commonjs",
    "target": "es2020",
    "types": [
      "jest", 
      "node", 
      "@testing-library/jest-dom"
    ]
  },
  "files": [
    "src/setup-jest.ts" // Archivo de setup de Jest
  ],
  "include": [
    "src/**/*.spec.ts",
    "src/**/*.d.ts"
  ]
}
